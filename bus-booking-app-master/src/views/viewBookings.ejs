                    <!-- page content -->


    <% function formatDate(dateObject) { 
      let d=new Date(dateObject); 
      let day=d.getDate(); 
      let month=d.getMonth() + 1; 
      let year=d.getFullYear();
      if (day < 10) { 
        day="0" + day; 
      } 
      if (month < 10) { 
        month="0" + month; 
      }
      let date=year + "-" + month + "-" + day; return date; 
    };%>
    
    <section class="pt-3 justify-content-center position-relative ">
           
          <div class="container">
              
                <div class="row justify-content-center">
                    <% bookings.forEach(booking=> { %>
                        <div class="card mt-4">
                            <div class="card-body">
                              <p><b><%= booking.userId.username %></b></p>            
                              Seats: <%= booking.seats %> <br>
                              Seat No: <%= booking.bookedSeats %> <br>
                              Amount Paid: <%= booking.totalAmount%> <br>
                              Booking Date: <%= formatDate(booking.bookingDate) %>  <br>
                              </div>
                          </div>
                    <% }) %>
                  </div>
                    
                </div>
                
            </div>
            
        </section>


