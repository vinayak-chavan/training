<html>

<head>
    <link rel="stylesheet" href="/public/css/blogcss.css" />
    <%- include('../views/partials/links'); %>  
   
</head>

<body>
    <div class="bgimg">
        <nav class="navbar navbar-expand-sm bg-light nav-dark">
            <div class="container">
                <a href="" class="navbar-brand"><img
                        src="https://www.onblastblog.com/wp-content/uploads/2017/08/blogger-logo.jpg"
                        style="width:100px; height: 50px;"> </a>
                <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse"
                    data-target="#collapsenavbar">
                    <span class="navbar-toggler-icon "></span>
                </button>
    
                <div class="collapse navbar-collapse text-center" id="collapsenavbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item px-2">
                            <a href="/category" class="nav-link text-dark"> HOME </a>
                        </li>
                        <li class="nav-item px-2">
                            <a href="/completeorder" class="nav-link text-dark"> COMPLETED ORDER </a>
                        </li>
                        <li class="nav-item px-2">
                            <a href="/logout" class="nav-link text-dark"> LOGOUT </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <section class="pt-5 justify-content-center position-relative ">
      <div class="container">
          <div class="row justify-content-center">
    
      <!-- <% orders.forEach(order=> { %>
      <%= order.userId %>
      <%= order.status %>
      <%= order.price %>
      <%= order.addressId %>
      <% }) %> -->
        
     <% orders.forEach(order=> { %>
    <div class="card" style="width: 18rem;">
      
      <div class="card-body">
        <p><label class="form-label text-orange lead">OrderId :</label>
                <span class="text-primary">
                  <a class="text-primary">
                      <%= order.id %>
                  </a>
                </span>
        </p>
        <p><label class="form-label text-orange lead">UserId :</label>
                <span class="text-primary">
                  <a class="text-primary">
                      <%= order.userId %>
                  </a>
                </span>
        </p>
        <p><label class="form-label text-orange lead">Status :</label>
                <span class="text-primary">
                  <a class="text-primary">
                      <%= order.status %>
                  </a>
                </span>
        </p>
        <p><label class="form-label text-orange lead">Price :</label>
                <span class="text-primary">
                  <a class="text-primary">
                      <%= order.price %>
                  </a>
                </span>
        </p>
        <p><label class="form-label text-orange lead">AddressId :</label>
                <span class="text-primary">
                  <a class="text-primary">
                      <%= order.addressId %>
                  </a>
                </span>
        </p>
        <a href="/updateOrder/<%= order.id %>" class="btn btn-primary">Update</a>
      </div>
      
    </div>
    <% }) %>
   
            </div>
        </div>
    </section>


    <%- include('../views/partials/footer'); %>
</body>

</html>