<html>

<head>
    <link rel="stylesheet" href="/public/css/blogcss.css" />
    <%- include('../views/partials/links'); %>  
   
</head>

<body>
    <div class="bgimg">
        <nav class="navbar navbar-expand-sm bg-light nav-dark">
            <div class="container">
                <a href="" class="navbar-brand"><img
                        src="https://www.onblastblog.com/wp-content/uploads/2017/08/blogger-logo.jpg"
                        style="width:100px; height: 50px;"> </a>
                <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse"
                    data-target="#collapsenavbar">
                    <span class="navbar-toggler-icon "></span>
                </button>
    
                <div class="collapse navbar-collapse text-center" id="collapsenavbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item px-2">
                            <a href="/category" class="nav-link text-dark"> HOME </a>
                        </li>
                        <li class="nav-item px-2">
                            <a href="/orders" class="nav-link text-dark"> ORDERS </a>
                        </li>
                        <li class="nav-item px-2">
                            <a href="/logout" class="nav-link text-dark"> LOGOUT </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

        <div class="container mt-5">
            <h2 class="text-center">Update Order Status Here</h2>
            <div class="d-flex justify-content-center">
                <form class="mt-3 col-md-6" id="addBlog" action="/orders" method="post">
                    <div class="form-group">
                        <label for="userId">User Name</label>
                        <input type="text" class="form-control" id="userId" name="userId" placeholder="Title" value="<%= orders.userId %>">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" class="form-control" id="price" name="price" placeholder="Price" value="<%= orders.price %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Status</label>
                        <div class="form-group"> 
                            <select name="status" id="status" class="form-control">
                                <option value="Pending">Pending</option>
                                <option value="OnTheWay">On The Way</option>
                                <option value="Complete">Delivered</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-info mt-2">Update Status</button>
                        <button type="" class="btn btn-danger mt-2">Back</button> 
                    </div>
                </form>
            </div>

            <%- include('../views/partials/footer'); %> 

            <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
            <script src="../utils/validation.js"></script>

</body>
</html>