          },
          error: (error) => {
            displayError(error.responseJSON.errorMessage);
          },
        });
      };

      $.ajax({
        url: "/projects/<%= projectId %>",
        method: "GET",
        success: (resData) => {
          $("#name").html(
            `<span>Name:&nbsp;</span><span class="font-weight-bold">${resData.data.name}</span>`
          );
          $("#type").html(
            `<span>Type:&nbsp;</span><span class="font-weight-bold">${resData.data.type}</span>`
          );
          $("#probable_end_date").html(
            `<span>Probable End Date:&nbsp;</span><span class="font-weight-bold">${formatDate(
              resData.data.probable_end_date
            )}</span>`
          );
          $("#status").html(
            `<span>Status:&nbsp;</span><span class="font-weight-bold">${resData.data.status}</span>`
          );
        },
        error: (resData) => {
          displayError(resData.responseJSON.errorMessage);
        },
      });

      $.ajax({
        url: "/project/<%= projectId %>/clients",
        method: "GET",
        success: (resData) => {
          if (resData.data.length) {
            resData.data.forEach((client) => {
              $("#clients-data-tbody").append(`
                <tr>
                  <td>${client.Client.name}</td>
                  <td>${client.Client.email}</td>
                  <td>${client.Client.slackId}</td>
                  <td>${client.Client.city}</td>
                  <td>${client.Client.state}</td>
                  <td>${client.Client.country}</td>
                  <td>${client.Client.organization}</td>
                </tr>
              `);
            });
          } else {
            $("#clients-data").html(`
              <div class='col-12 text-center my-4'>
                <p><h4 class='text-danger'>No client has been assigned to this project !!!</h4></p>
              </div>
            `);
          }
        },
        error: (resData) => {
          displayError(resData.responseJSON.errorMessage);
        },
      });

      $.ajax({
        url: "/project/<%= projectId %>/employees",
        method: "GET",
        success: (resData) => {
          if (resData.data.length) {
            resData.data.forEach((emp) => {
              $("#employees-data-tbody").append(
                `<tr  id="${emp.Employee.id}">
                  <td><img src="${emp.Employee.avatar}" width="30" height="30" class="rounded-circle"></td>
                  <td>${emp.Employee.firstName}</td>
                  <td>${emp.Employee.lastName}</td>
                  <td>${emp.Employee.email}</td>
                  <td>${emp.Employee.gender}</td>
                  <td>${emp.Employee.role}</td>
                  <td class="text-center error"><span class="lnr lnr-eye cursor-pointer" onclick="enlargeEmployee('${emp.Employee.id}')"></span></td>
                </tr>`
              );
            });
          } else {
            $("#employees-data").html(`
              <div class='col-12 text-center my-4'>
                <p><h4 class='text-danger'>No employee has been assigned to this project !!!</h4></p>
              </div>
            `);
          }
        },
        error: (resData) => {
          displayError(resData.responseJSON.errorMessage);
        },
      });
